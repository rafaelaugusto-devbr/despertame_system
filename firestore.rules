rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ===================================
    // Helper Functions
    // ===================================

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is admin (custom claim set by Cloud Functions)
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.admin == true;
    }

    // Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() &&
             request.auth.uid == userId;
    }

    // Validate required fields exist
    function hasRequiredFields(fields) {
      return request.resource.data.keys().hasAll(fields);
    }

    // ===================================
    // Admin Users Collection
    // ===================================
    match /users/{userId} {
      // Only admins can read user list
      allow read: if isAdmin();

      // Only admins can create/update/delete users
      allow create, update, delete: if isAdmin();
    }

    // ===================================
    // Financial Collections
    // ===================================

    // Cash Flow Entries
    match /fluxoCaixaLancamentos/{entryId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                      hasRequiredFields(['tipo', 'valor', 'descricao', 'data']) &&
                      request.resource.data.valor is number &&
                      request.resource.data.valor >= 0 &&
                      request.resource.data.tipo in ['entrada', 'saida'];

      allow update: if isAuthenticated();

      allow delete: if isAdmin();
    }

    // Cash Flow Categories
    match /fluxoCaixaCategorias/{categoryId} {
      allow read: if isAuthenticated();

      allow create, update: if isAuthenticated() &&
                              hasRequiredFields(['nome', 'tipo']) &&
                              request.resource.data.tipo in ['entrada', 'saida'];

      allow delete: if isAdmin();
    }

    // Sales Campaigns
    match /vendasCampanhas/{campaignId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                      hasRequiredFields(['nome', 'metaVendas', 'dataInicio', 'dataFim']) &&
                      request.resource.data.metaVendas is number &&
                      request.resource.data.metaVendas > 0;

      allow update: if isAuthenticated();

      allow delete: if isAdmin();
    }

    // Sales Transactions
    match /vendasTransacoes/{transactionId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                      hasRequiredFields(['campanhaId', 'valor', 'data']) &&
                      request.resource.data.valor is number &&
                      request.resource.data.valor > 0;

      allow update, delete: if isAuthenticated();
    }

    // ===================================
    // Marketing Collections
    // ===================================

    // Leads
    match /leads/{leadId} {
      allow read: if isAuthenticated();

      // Allow public creation (from website forms)
      allow create: if hasRequiredFields(['email']) &&
                      request.resource.data.email.matches('^[\\w\\.-]+@[\\w\\.-]+\\.\\w+$');

      allow update: if isAuthenticated();

      allow delete: if isAdmin();
    }

    // Blog Posts
    match /posts/{postId} {
      // Anyone can read published posts
      allow read: if resource == null ||
                    resource.data.status == 'publicado' ||
                    isAuthenticated();

      allow create: if isAuthenticated() &&
                      hasRequiredFields(['titulo', 'conteudo', 'status']) &&
                      request.resource.data.status in ['rascunho', 'publicado'];

      allow update: if isAuthenticated();

      allow delete: if isAdmin();
    }

    // Email Campaigns
    match /emailCampanhas/{campaignId} {
      allow read: if isAuthenticated();

      allow create, update: if isAuthenticated() &&
                              hasRequiredFields(['assunto', 'conteudo']);

      allow delete: if isAdmin();
    }

    // ===================================
    // Calendar Events
    // ===================================
    match /calendarioEventos/{eventId} {
      // Anyone authenticated can read events
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                      hasRequiredFields(['titulo', 'data']);

      allow update, delete: if isAuthenticated();
    }

    // ===================================
    // Configuration Collections
    // ===================================

    // Links Configuration
    match /links/{linkId} {
      allow read: if isAuthenticated();

      allow create, update: if isAdmin() &&
                              hasRequiredFields(['titulo', 'url']);

      allow delete: if isAdmin();
    }

    // System Configuration
    match /config/{configId} {
      allow read: if isAuthenticated();

      allow write: if isAdmin();
    }

    // ===================================
    // Deny all other collections by default
    // ===================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
